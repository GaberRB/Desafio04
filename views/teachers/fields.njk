
            <div class="item">
                <div>Nome Completo</div>
                <div>
                    <input 
                        type="text" 
                        name="name"
                        placeholder="Nome completo"
                        value="{{teacher.name}}"
                     >
                </div>
            </div>
            <div class="item">
                <div>Avatar</div>
                <div>
                    <input 
                        type="url" 
                        name="avatar_url"
                        placeholder="http://" 
                        value="{{teacher.avatar_url}}"
                    >
                </div>
            </div>
            <div class="item">
                <div>Data nascimento</div>
                <div>
                    <input 
                        type="date" 
                        name="birth"
                        value="{{teacher.date}}"
                       
                     >
                </div>
            </div>
             <div class="item">
                <div>Escolaridade</div>
                <div>
                      <select name="scholarity">
                        <option 
                            value="highschool"
                            {% if teacher.scholarity == "highschool" %}
                                selected
                            {% endif %}
                            >Ensino m√©dio
                        </option>
                        <option 
                            value="university"
                            {% if teacher.scholarity == "university" %}
                                selected
                            {% endif %}
                            >Ensino superior
                        </option>
                        <option 
                            value="master"
                            {% if teacher.scholarity == "master" %}
                                selected
                            {% endif %}
                            >Mestrado
                        </option>
                        <option 
                            value="doctor"
                            {% if teacher.scholarity == "doctor" %}
                                selected
                            {% endif %}
                            >Doutorado
                        </option>
                      </select>                    
                    
                </div>
            </div>
            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <span>
                        <input 
                            type="radio" 
                            name="typeClass"
                            value=presential
                            {% if teacher.typeClass == 'presential' %}
                                checked
                            {% endif %}
                            >
                            Presencial
                    </span>
                    <span>
                        <input 
                            type="radio" 
                            name="typeClass"
                            value="ead"
                            {% if teacher.typeClass == 'ead' %}
                                checked
                            {% endif %}
                            >
                            EAD
                    </span>
                </div>
            </div>
            <div class="item">
                <div>Disciplinas</div>
                <div>
                    <input 
                        type="text" 
                        name="vocation" 
                        placeholder="separar por virgula"
                        value ="{{teacher.vocation}}"
                    >
                </div>
            </div>
            <button type="submit"> Salvar </button>