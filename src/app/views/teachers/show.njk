{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style= "background: url({{teacher.avatar_url}}) no-repeat center center /cover">
        </section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Teacher</div>
                <div>{{teacher.name}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>
            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <span>
                        <input 
                            type="radio" 
                            name="class_type"
                            value=presential
                            {% if teacher.class_type == 'presential' %}
                                checked
                            {% endif %}
                            >
                            Presencial
                    </span>
                    <span>
                        <input 
                            type="radio" 
                            name="class_type"
                            value="ead"
                            {% if teacher.class_type == 'ead' %}
                                checked
                            {% endif %}
                            >
                            EAD
                    </span>
                </div>
            </div>
            <div class="item">
            <div>Escolaridade</div>
                <div>
                      <select name="education_level" disabled="true">
                        <option 
                            value="highschool"
                            {% if teacher.education_level == "highschool" %}
                                selected
                            {% endif %}
                            >Ensino m√©dio
                        </option>
                        <option 
                            value="university"
                            {% if teacher.education_level == "university" %}
                                selected
                            {% endif %}
                            >Ensino superior
                        </option>
                        <option 
                            value="master"
                            {% if teacher.education_level == "master" %}
                                selected
                            {% endif %}
                            >Mestrado
                        </option>
                        <option 
                            value="doctor"
                            {% if teacher.education_level == "doctor" %}
                                selected
                            {% endif %}
                            >Doutorado
                        </option>
                      </select>                    
                    
                </div>
            </div>
            <div class="item">
                <div>Aulas</div>
                <div>
                    {% for subjects_taught in teacher.subjects_taught %}
                         <span>{{subjects_taught}}</span>
                    {% endfor %}
                   
                </div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>
            <input type="hidden" name="id" value= {{teacher.id}}>
            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
        </section>
    </div>
{% endblock content %}
