{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">

        <div class="header">
            <a class="button" href="/teachers/create">Novo</a>
            <form action="/teachers" method="GET">
                <input 
                    type="text"
                    name="filter"
                    placeholder="Nome ou Diciplina"
                    value="{{filter}}"
                    >
                <button type="submit">Filtrar</button>
            </form>
        </div>

        
        <table width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Acompanhamento</th>
                    <th>Alunos</th>
                    <th>Ação</th>

                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr class="lines">
                    <td>
                        <span style="background-image: url({{teacher.avatar_url}})"></span>
                        {{teacher.name}}
                    </td>

                    {% set name = value %}
                    <td><span>{{teacher.subjects_taught}}</span></td>
                     <td>{{teacher.total_students}}</td>
                    <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
                </tr>
                {% endfor %}
                
            </tbody>
        </table>
    </div>
    <script src="/scripts.js"></script>
{% endblock content %}
