
            <div class="item">
                <div>Nome Completo</div>
                <div>
                    <input 
                        type="text" 
                        name="name"
                        placeholder="Nome completo"
                        value="{{student.name}}"
                     >
                </div>
            </div>
            <div class="item">
                <div>Avatar</div>
                <div>
                    <input 
                        type="url" 
                        name="avatar_url"
                        placeholder="http://" 
                        value="{{student.avatar_url}}"
                    >
                </div>
            </div>
            <div class="item">
                <div>Data nascimento</div>
                <div>
                    <input 
                        type="date" 
                        name="birth_date"
                        value="{{student.birth_date}}"
                       
                     >
                </div>
            </div>
            <div class="item">
                <div>Email</div>
                <div>
                    <input 
                        type="email" 
                        name="email"
                        value="{{student.email}}"
                       
                     >
                </div>
            </div>
             <div class="item">
                <div>Escolaridade</div>
                <div>
                      <select name="education_level">
                        <option 
                            value="EF5"
                            {% if student.education_level == "EF5" %}
                                selected
                            {% endif %}
                            >5º Fundamental
                        </option>
                        <option 
                            value="EF6"
                            {% if student.education_level == "EF6" %}
                                selected
                            {% endif %}
                            >6º Fundamental
                        </option>
                        <option 
                            value="EF7"
                            {% if student.education_level == "EF7" %}
                                selected
                            {% endif %}
                            >7º Fundamental
                        </option>
                        <option 
                            value="EF8"
                            {% if student.education_level == "EF8" %}
                                selected
                            {% endif %}
                            >8º Fundamental
                        </option>
                        <option 
                            value="EM1"
                            {% if student.education_level == "EM1" %}
                                selected
                            {% endif %}
                            >1º Ensino Médio
                        </option>
                        <option 
                            value="EM2"
                            {% if student.education_level == "EM2" %}
                                selected
                            {% endif %}
                            >2º Ensino Médio
                        </option>
                        <option 
                            value="EM3"
                            {% if student.education_level == "EM3" %}
                                selected
                            {% endif %}
                            >3º Ensino Médio
                        </option>
                      </select>                    
                    
                </div>
            </div>
            <div class="item">
                <div>Carga horária</div>
                <div>
                    <input 
                        type="number" 
                        name="hours" 
                        value ="{{student.hours}}"
                    >
                </div>
            </div>
            <div class="item">
                <div>Professor</div>
                <div>
                      <select name="teacher">
                         {% for teacher in teacherOptions %} 
                        <option 
                            value="{{teacher.id}}"
                            {% if student.teacher_id == teacher.id %}
                                selected
                            {% endif %}
                            >{{teacher.name}}
                        </option>
                        {%endfor%}
                       </select>                    
                    
                </div>
            </div>
            <button type="submit"> Salvar </button>